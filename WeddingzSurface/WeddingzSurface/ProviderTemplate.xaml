<UserControl x:Class="WeddingzSurface.ProviderTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Name="ProviderUserControl"
    Height="480"
    Width="350"
    Background="Transparent"
    Opacity="0.8"
    Margin="0">
    <Grid Name="ProviderGride" Height="280" Width="350">
        <Grid Name="ProviderOverview"
              Visibility="Visible" Canvas.Top="0" Margin="0,-100,100,0" Width="250" Height="150" VerticalAlignment="Top">
            <Image Name="ProviderImage"
                   Canvas.Top="0"
                   Canvas.Left="0"
                   Stretch="Fill"
                   Margin="19,43,22,10" />
            <Label Name="ProviderName"
                   Content="Name"
                   Height="38"
                   FontWeight="Bold"
                   FontSize="20"
                   VerticalAlignment="Top" />
        </Grid>
        <Grid Name="ProviderDetail"
              Visibility="Hidden" Canvas.Top="0" Margin="0,-200,0,-200" Width="350" Height="480">
            <Label FontWeight="Bold" FontSize="20" Name="ProviderNameDetail" Content="Name" Height="38" VerticalAlignment="Top" />
            <TextBlock Name="ProviderDescription" Margin="10,43,10,0" Text="Description" Height="97" VerticalAlignment="Top" />
            <Label Name="ProviderFares" Margin="5,155,0,0" Content="Tarifs" HorizontalAlignment="Left" Width="106" Height="34" VerticalAlignment="Top" />
            <my:LibraryBar Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Name="PhotoLibrary" Rows="1" xmlns:my="http://schemas.microsoft.com/surface/2008" Margin="0,200,0,0" Width="350" Height="300" Foreground="Transparent" OpacityMask="AliceBlue">
            </my:LibraryBar>
        </Grid>
    </Grid>
</UserControl>
